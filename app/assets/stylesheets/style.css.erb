html {
  height: 100%;
}
body {
  padding-top:80px;
  background: url(<%= asset_path 'wallpaper2.jpg' %>) no-repeat center center fixed;
  background-size: cover;
  height: 100%;
}

.form-holder {
  padding-top: 50px;
  width: 50%;

}

.danger {
  color: red;
  padding-top: 20px;
}

#twinkle {
  display: none;
  height: 80px;
  width: 60px;
  background: url(<%= asset_path 'twinkle.gif' %>) no-repeat center center transparent;
  position: absolute;
  top: 0;
  left: 0;
  background-size: 60px 80px;
  z-index: 2000;
}

a.navbar-brand {
  font-family: 'Alfa Slab One', cursive;
  font-size: 30px;
  letter-spacing: 0.1em;
}

nav.navbar-inverse {
  background: #1D6823;
  border-bottom: 1px solid #1D6823;
}

nav.navbar-inverse .navbar-header a,
nav.navbar-inverse .navbar-nav li > a{
  color: #fff;
}

main.container {
  background: rgba(243, 243, 243, 0.95);
  padding: 30px;
  border-radius: 10px;
  border: 10px solid #1D6823;
}

main.container.home {
  background: none;
  border: 0;
}

#home-jumbo {
  background: transparent;
}

#home-jumbo .logo {
  font-family: 'Alfa Slab One', cursive;
  font-size: 6vw;
  text-transform: uppercase;
  letter-spacing: .08em;
  color: #6F6F92;
  text-shadow: 5px 5px 10px #000000;
  -webkit-text-fill-color: #6F6F92;
  -webkit-text-stroke-width: 3px;
  -webkit-text-stroke-color: #fff;
}

.landing-form-label {
  color: white;
}

.btn.btn-success {
  background: #49618F;
  border-color: #49618F;
}

.app-wrapper {
  background: #fff;
  padding: 15px;
  box-shadow: 0px 0px 12px;
  margin-right: 10px;
  height: 70vh;
  overflow-y: scroll;
}

.user-sidebar {
  box-shadow: 5px 4px 2px #444343;
}

.panel.user-table {
  background: transparent;
  border: none;
}

.nav.user-tabs {
  margin: 20px 0;
}

.nav.user-tabs li {
  margin-right: 15px;
}

#map {
  height: 430px;
  display: inline-block;
  border: 5px solid white;
  box-shadow: 0px 0px 20px #757575;
  margin-bottom: 50px;
}

.upcoming-game-link {
  color: white;
    text-decoration: none;
}

.upcoming-game-link:hover, .upcoming-game-link:focus {
    color: #7AC3FF;
    text-decoration: none;
}


