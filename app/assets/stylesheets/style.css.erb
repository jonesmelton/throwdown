html {
  height: 100%;
}
body {
  padding-top:80px;
  background: url(<%= asset_path 'wallpaper2.jpg' %>) no-repeat center center fixed;
  background-size: cover;
  height: 100%;
}

.navbar-brand {
  font-family: 'Alfa Slab One', cursive;
  font-size: 3em;
}

nav.navbar-inverse {
  background: #1D6823;
  border-bottom: 1px solid #1D6823;
}

nav.navbar-inverse .navbar-header a,
nav.navbar-inverse .navbar-nav li > a{
  color: #fff;
}

main.container {
  background: rgba(243, 243, 243, 0.95);
  padding: 30px;
  border-radius: 10px;
  border: 10px solid #1D6823;
}

main.container.home {
  background: none;
  border: 0;
}

#home-jumbo {
  background: transparent;
}

#home-jumbo .logo {
  font-family: 'Alfa Slab One', cursive;
  font-size: 6vw;
  text-transform: uppercase;
  letter-spacing: .08em;
  color: #6F6F92;
  text-shadow: 5px 5px 10px #000000;
  -webkit-text-fill-color: #6F6F92;
  -webkit-text-stroke-width: 3px;
  -webkit-text-stroke-color: #fff;
}

.btn.btn-success {
  background: #49618F;
  border-color: #49618F;
}


.panel.user-table {
  background: transparent;
  border: none;
}

.nav.user-tabs {
  margin: 20px 0;
}

.nav.user-tabs li {
  margin-right: 15px;
}


#map {
  height: 400px;
  width: 70%;
  display: inline-block;
}


