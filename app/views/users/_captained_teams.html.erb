
<div class="panel panel-default col-md-6 user-table">
  <!-- Default panel contents -->
  <div class="panel-heading"><span class="glyphicon glyphicon-envelope"></span> Teams Captained:</div>
  <!-- Table -->
  <table class="table">
    <tr>
      <th>Team Name</th>
      <th>Players</th>
    </tr>
  <% @user.captained_teams.each do |team| %>
    <tr>
      <td><%= link_to team.name, team %></td>
      <td><%= team.players.count %></td>
    </tr>
    <% end %>
  </table>
</div>
