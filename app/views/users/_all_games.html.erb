<h4>All of <%= @user.first_name %>'s Games</h4>

<table class="table">
  <tr>
    <th>Location/Time</th>
    <th>Opponent</th>
    <th>Sport</th>
  </tr>
  <% @user.sort_accepted_games.reverse.each do |game|%>
    <tr <% if game.has_on_winning_team?(@user) && game.game_over? %>
      class="success"
    <% end %>>
      <td>
        <%= link_to raw(game.location + '<br>' + game.nice_date(game.start_time)), game %>
      </td>
      <td><%= game.home_team.name %> Vs<br><%=  game.away_team.name %></td>
      <td>
        <%= game.sport_played.name %>
      </td>
    </tr>
  <% end %>
</table>
