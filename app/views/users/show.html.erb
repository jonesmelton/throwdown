User:<br>
<%= @user.first_name %> <br>
<%= @user.last_name %> <br>

<div class="row">
    <div class="panel panel-default col-md-5 col-md-offset-1 user-table ">
      <!-- Default panel contents -->
      <div class="panel-heading"><span class="glyphicon glyphicon-user"></span> <%= @user.username%>'s Teams:</div>
      <!-- Table -->
      <table class="table">
        <tr>
          <th>Team Name</th>
          <th>Captain</th>
        </tr>
        <% @user.teams.each do |team| %>
        <tr>
          <td><%= link_to team.name, team %></td>
          <td><%= link_to team.captain.username, team.captain %></td>
        </tr>
        <% end %>
      </table>
    </div>


    <div class="panel panel-default col-md-5 user-table">
      <!-- Default panel contents -->
      <div class="panel-heading"><span class="glyphicon glyphicon-envelope"></span> Pending Invites:</div>
      <!-- Table -->
      <table class="table">
        <tr>
          <th>Invite ID</th>
          <th>Home Team</th>
          <th>Away Team</th>
        </tr>
      <% @user.pending_invites.each do |pending| %>
        <tr>
          <td><%= link_to pending.id, pending %></td>
          <td><%= link_to pending.team.name, team_path(pending.team_id) %></td>
          <td><%= link_to pending.game.home_team.name, team_path(pending.game.home_team.id)  %></td>

        </tr>
        <% end %>
      </table>
    </div>



    <div class="panel panel-default col-md-5 user-table  col-md-offset-1">
      <!-- Default panel contents -->
      <div class="panel-heading"><span class="glyphicon glyphicon-ok"></span> Accepted Invites:</div>
      <!-- Table -->
      <table class="table">
        <tr>
          <th>Home Team</th>
          <th>Away Team</th>
        </tr>
      <% @user.accepted_games.each do |accepted| %>
        <tr>
          <td><%= link_to accepted.home_team.name, accepted %></td>
          <td><%= link_to accepted.away_team.name, accepted %></td>
        </tr>
        <% end %>
      </table>
  </div>
</div>
