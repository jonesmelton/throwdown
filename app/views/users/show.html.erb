<h2>User:
<%= @user.first_name %>
<%= @user.last_name %></h2>

<ul class="nav nav-pills">
  <li role="presentation" class="active"><a href="#"><i class="fa fa-anchor" aria-hidden="true"></i> Teams I Captain</a></li>
  <li role="presentation"><a href="#"><i class="fa fa-envelope" aria-hidden="true"></i> Invitations</a></li>
  <li role="presentation"><a href="#"><i class="fa fa-trophy" aria-hidden="true"></i> Games</a></li>
  <li role="presentation"><a href="#"><i class="fa fa-users" aria-hidden="true"></i> Teams</a></li>
</ul>

<div class="row">
    <div class="panel panel-default col-md-6 user-table">
      <!-- Default panel contents -->
      <div class="panel-heading"><span class="glyphicon glyphicon-user"></span> Sports Played</div>
      <!-- Table -->
      <table class="table">
        <tr>
          <th>Sport Name</th>
        </tr>
        <% @user.played_sports.each do |sport| %>
        <tr>
          <td><%= sport.name %></td>
        </tr>
        <% end %>
      </table>
    </div>
    <div class="panel panel-default col-md-6 user-table ">
      <!-- Default panel contents -->
      <div class="panel-heading"><span class="glyphicon glyphicon-user"></span> <%= @user.username%>'s Teams:</div>
      <!-- Table -->
      <table class="table">
        <tr>
          <th>Team Name</th>
          <th>Captain</th>
        </tr>
        <% @user.teams.each do |team| %>
        <tr>
          <td><%= link_to team.name, team %></td>
          <td><%= link_to team.captain.username, team.captain %></td>
        </tr>
        <% end %>
      </table>
    </div>


    <div class="panel panel-default col-md-6 user-table">
      <!-- Default panel contents -->
      <div class="panel-heading"><span class="glyphicon glyphicon-envelope"></span> Pending Invites:</div>
      <!-- Table -->
      <table class="table">
        <tr>
          <th>Invite ID</th>
          <th>Home Team</th>
          <th>Away Team</th>
        </tr>
      <% @user.pending_invites.each do |pending| %>
        <tr>
          <td><%= link_to pending.id, pending %></td>
          <td><%= link_to pending.team.name, team_path(pending.team_id) %></td>
          <td><%= link_to pending.game.home_team.name, team_path(pending.game.home_team.id)  %></td>

        </tr>
        <% end %>
      </table>
    </div>



    <div class="panel panel-default col-md-6 user-table ">
      <!-- Default panel contents -->
      <div class="panel-heading"><span class="glyphicon glyphicon-ok"></span> Accepted Invites:</div>
      <!-- Table -->
      <table class="table">
        <tr>
          <th>Game</th>
          <th>Home Team</th>
          <th>Away Team</th>
        </tr>
      <% @user.accepted_games.each do |accepted| %>
        <tr>
          <td><%= link_to accepted.id, game_path(accepted) %></td>
          <td><%= link_to accepted.home_team.name, team_path(accepted.home_team) %></td>
          <td><%= link_to accepted.away_team.name, team_path(accepted.away_team) %></td>
        </tr>
        <% end %>
      </table>
  </div>

<%= render "captained_teams" %>
</div>
