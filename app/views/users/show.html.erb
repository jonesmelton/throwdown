User:<br>
<%= @user.first_name %> <br>
<%= @user.last_name %> <br>



Teams: <br>
<ul>
  <% @user.teams.each do |team| %>
    <li><%= link_to team.name, team %><br>
    <li><%= link_to team.captain.username, team.captain %></li><br>
  <% end %>
</ul>

Pending Invites<br>
  <ul>
    <% @user.pending_invites.each do |pending| %>
      <li><%= link_to "#{pending.home_team.name} vs. #{pending.away_team.name}", pending %></li><br>
    <% end %>
  </ul>

  Accepted Invites<br>
  <ul>
    <% @user.accepted_games.each do |accepted| %>
      <li><%= link_to "#{accepted.home_team.name} vs. #{accepted.away_team.name}", accepted %></li><br>
    <% end %>
  </ul>
