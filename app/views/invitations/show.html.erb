
<div class="panel panel-primary">
  <div class="panel-heading">
    <h3 class="panel-title">Event Information</h3>
  </div>
  <div class="panel-body">
    Start Time: <%= @invitation.game.start_time %><br>
    Location: <br>
    Player Count: <%= @invitation.game.participants.count %> 
  </div>
</div>


<div class="panel panel-default col-md-5 col-md-offset-1 user-table ">
  <!-- Default panel contents -->
  <div class="panel-heading"><span class="glyphicon glyphicon-user"></span> RSVP'd Players</div>
  <!-- Table -->
  <table class="table">
    <tr>
      <th>First Name</th>
      <th>Last Name</th>
    </tr>
    <% @invitation.game.participants.each do |player| %>
    <tr>
      <td><%= player.first_name %></td>
      <td><%= player.last_name %></td>
    </tr>
    <% end %>
  </table>
</div>

<div>
<%= form_for @invitation do |f| %>
  Accept?: <%= f.check_box :accepted %>
  <%= f.submit %>
<% end %>
</div>
<div class="clearfix"></div>
