<h2>Team Name: <%= @team.name %></h2>
<h3>Members:</h3>
<div class="panel panel-default col-md-5 col-md-offset-1 user-table ">
  <!-- Default panel contents -->
  <div class="panel-heading"><span class="glyphicon glyphicon-user"></span> Players</div>
  <!-- Table -->
  <table class="table">
    <tr>
      <th>First Name</th>
      <th>Last Name</th>
    </tr>
    <% @team.players.each do |player| %>
    <tr>
      <td><%= player.first_name %></td>
      <td><%= player.last_name %></td>
    </tr>
    <% end %>
  </table>
</div>
