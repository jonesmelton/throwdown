  <table class="table">
    <tr>
      <% if logged_in? && current_user.id == @team.captain.id %>
      <br>
      <a class="btn btn-xs btn-primary" href="/teams/<%= @team.id %>/registrations/new">+ Add Player</a>
      <br>
    <% end %>
    </tr>
    <tr>
      <th>Player Name</th>
      <th>Games Played Count</th>
    </tr>
    <% @team.players.each do |player| %>
    <tr>
      <td><%= link_to player.full_name, player %></td>
      <td><%= player.registrations.count %></td>
    </tr>
    <% end %>
  </table>
