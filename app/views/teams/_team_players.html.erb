<div role="tabpanel" class="tab-pane active" id="players">
  <table class="table">
    <tr>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Games Played Count</th>
    </tr>
    <% @team.players.each do |player| %>
    <tr>
      <td><%= player.first_name %></td>
      <td><%= player.last_name %></td>
      <td><%= player.registrations.count %></td>
    </tr>
    <% end %>
  </table>
</div>
