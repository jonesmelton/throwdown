<% if is_captain?(@game)%>
<%= link_to "Edit this game", edit_game_path%>
<% end %>

<div class="panel panel-primary">
  <div class="panel-heading">
    <h3 class="panel-title">Event Information</h3>
  </div>
  <div class="panel-body">
    Date: <%= @game.date %><br>
    Time: <%= @game.time %><br>
    Location: <span id="location"><%= @game.location %></span><br>
    Player Count: <%= @game.participants.count %><br>
    Winner: <%= @game.winner_team.name if @game.game_over? %>
  </div>
</div>
<div id="map">

</div>

<div class="panel panel-default col-md-4 col-md-offset-4 user-table ">
  <!-- Default panel contents -->
  <div class="panel-heading"><span class="glyphicon glyphicon-user"></span> RSVP'd Players</div>
  <!-- Table -->
  <table class="table">
    <tr>
      <th>First Name</th>
      <th>Last Name</th>
    </tr>
    <% @game.participants.each do |player| %>
    <tr>
      <td><%= player.first_name %></td>
      <td><%= player.last_name %></td>
    </tr>
    <% end %>
  </table>
</div>

